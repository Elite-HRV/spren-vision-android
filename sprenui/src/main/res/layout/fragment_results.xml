<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ResultsFragment">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/done_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/done"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/congrats_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:letterSpacing="0"
                android:lineSpacingExtra="-10sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/congrats"
                android:textColor="@color/tertiary_text_color"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/done_text" />

            <TextView
                android:id="@+id/completed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:letterSpacing="0"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/completed_text"
                android:textAlignment="center"
                android:textColor="@color/main_text_color"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/congrats_text" />

            <TextView
                android:id="@+id/hrv_score_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:letterSpacing="0"
                android:lineSpacingExtra="-10sp"
                android:paddingStart="32dp"
                android:paddingEnd="8dp"
                android:textColor="@color/main_text_color"
                android:textSize="72sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/completed_text"
                tools:text="63" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/heart_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/hrv_score_value"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/hrv_score_value"
                app:srcCompat="@drawable/ic_heart" />

            <TextView
                android:id="@+id/hr_score_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0"
                android:lineSpacingExtra="-10sp"
                android:paddingStart="8dp"
                android:paddingEnd="32dp"
                android:textColor="@color/main_text_color"
                android:textSize="72sp"
                app:layout_constraintBottom_toBottomOf="@id/hrv_score_value"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/hrv_score_value"
                tools:text="59" />

            <TextView
                android:id="@+id/hrv_score_value_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:letterSpacing="0"
                android:paddingStart="32dp"
                android:paddingEnd="8dp"
                android:text="@string/hrv_score"
                android:textColor="@color/tertiary_text_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/hrv_score_value"
                app:layout_constraintStart_toStartOf="@id/hrv_score_value"
                app:layout_constraintTop_toBottomOf="@id/hrv_score_value" />

            <TextView
                android:id="@+id/hr_score_value_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:letterSpacing="0"
                android:paddingStart="8dp"
                android:paddingEnd="32dp"
                android:text="@string/heart_rate"
                android:textColor="@color/tertiary_text_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/hr_score_value"
                app:layout_constraintStart_toStartOf="@id/hr_score_value"
                app:layout_constraintTop_toBottomOf="@id/hr_score_value" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardCornerRadius="14dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hr_score_value_text">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/population_comparison_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0"
                        android:lineSpacingExtra="-10sp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/population_comparison"
                        android:textColor="@color/tertiary_text_color"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/compare_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:letterSpacing="0"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="@string/compare_text"
                        android:textAlignment="center"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/population_comparison_text" />

                    <TextView
                        android:id="@+id/you"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0"
                        android:textColor="@color/tertiary_text_color"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/compare_text"
                        tools:text="@string/you" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/arrow_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/you"
                        app:srcCompat="@drawable/ic_arrow" />

                    <TextView
                        android:id="@+id/one_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0"
                        android:text="@string/one_text"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/you" />

                    <TextView
                        android:id="@+id/hundred_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0"
                        android:text="@string/hundred_text"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/you" />

                    <View
                        android:id="@+id/range"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@drawable/range_background"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/one_text" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/range_used"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/one_text"
                        app:srcCompat="@drawable/ic_range_used" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/one_text"
                        app:srcCompat="@drawable/ic_circle" />

                    <TextView
                        android:id="@+id/twenty_four_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0"
                        android:text="@string/twenty_four_text"
                        android:textColor="@color/tertiary_text_color"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/range"
                        tools:layout_marginStart="24dp" />

                    <TextView
                        android:id="@+id/fifty_eight_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0"
                        android:text="@string/fifty_eight_text"
                        android:textColor="@color/tertiary_text_color"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/range"
                        tools:layout_marginStart="24dp" />

                    <TextView
                        android:id="@+id/ninety_three_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0"
                        android:text="@string/ninety_three_text"
                        android:textColor="@color/tertiary_text_color"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/range"
                        tools:layout_marginStart="24dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/unlock_biomarkers_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:letterSpacing="0"
                android:lineSpacingExtra="-10sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/unlock_biomarkers"
                android:textAlignment="center"
                android:textColor="@color/tertiary_text_color"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card" />

            <TextView
                android:id="@+id/brands_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:letterSpacing="0"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/brands_title"
                android:textColor="@color/tertiary_text_color"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/unlock_biomarkers_text" />

            <TextView
                android:id="@+id/brands_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:letterSpacing="0"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/brands_text"
                android:textColor="@color/tertiary_text_color"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/brands_title" />

            <TextView
                android:id="@+id/click_below_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:letterSpacing="0"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/click_below_text"
                android:textAlignment="center"
                android:textColor="@color/main_text_color"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/brands_text" />

            <Button
                android:id="@+id/sprenButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:letterSpacing="0"
                android:text="@string/spren_can_help"
                android:textAllCaps="false"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/click_below_text" />

            <TextView
                android:id="@+id/for_investigational_use_only_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="14dp"
                android:letterSpacing="0"
                android:paddingStart="22dp"
                android:paddingEnd="22dp"
                android:text="@string/for_investigational_use_only_text"
                android:textAlignment="center"
                android:textColor="@color/light_gray"
                android:textSize="8sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sprenButton"
                tools:ignore="SmallSp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/powered_by_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/for_investigational_use_only_text"
                app:srcCompat="@drawable/ic_powered_by_black" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>